
{
    "version": "2.0.0",

    "tasks": [
        {
            "type": "process",
            "label": "Cargo Build",

            "command": "cargo",
            "args": [ "build" ],

            "problemMatcher": "$rustc",

            "group": {
                "kind": "build",
                "isDefault": true
            },

            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
